{
  "name": "dev-snippet",
  "version": "1.0.0",
  "description": "An Electron application with React",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --win --x64",
    "dist:publish": "npm run build && electron-builder --win --x64 --publish=always",
    "make:icons": "npx electron-icon-maker --input src/renderer/public/icon.png --output build"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.8",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@uiw/react-codemirror": "^4.25.3",
    "better-sqlite3": "^12.5.0",
    "github-markdown-css": "^5.8.1",
    "highlight.js": "^11.11.1",
    "lucide": "^0.555.0",
    "lucide-react": "^0.555.0",
    "marked": "^17.0.1",
    "prop-types": "^15.8.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.6",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.1.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron/rebuild": "^4.0.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.22",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "subset-font": "^2.4.0",
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.6",
    "vitest": "^4.0.15",
    "webpack-bundle-analyzer": "^5.0.1"
  },
  "build": {
    "appId": "com.devsnippet.app",
    "productName": "Dev Snippet",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Saboor-Hamedi",
        "repo": "dev-snippet"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icons/win/icon.ico"
    },
    "linux": {
      "icon": "build/icons/png/*",
      "target": [
        "AppImage"
      ]
    },
    "mac": {
      "icon": "build/icons/mac/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "installerIcon": "build/icons/win/icon.ico",
      "installerHeaderIcon": "build/icons/win/icon.ico"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ]
  }
}
